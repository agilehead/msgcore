{
  "name": "@agilehead/msgcore-server",
  "version": "0.0.1",
  "description": "MsgCore conversation service server",
  "type": "module",
  "main": "./dist/bin/server.js",
  "scripts": {
    "build": "npm run codegen && tsc && cp src/schema.graphql dist/",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "npm run codegen && tsx watch src/bin/server.ts",
    "start": "node dist/bin/server.js",
    "test": "NODE_OPTIONS='--import tsx' mocha tests/index.ts --timeout 60000",
    "test:grep": "NODE_OPTIONS='--import tsx' mocha tests/index.ts --timeout 60000 --grep",
    "test:build": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agilehead/msgcore-db": "file:../msgcore-db",
    "@agilehead/msgcore-logger": "file:../msgcore-logger",
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@tinqerjs/better-sqlite3-adapter": "0.0.26",
    "@tinqerjs/tinqer": "0.0.26",
    "better-sqlite3": "^11.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@agilehead/msgcore-test-utils": "file:../msgcore-test-utils",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.5.1",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/chai": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.2",
    "mocha": "^10.8.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "import": "./dist/bin/server.js",
      "types": "./dist/bin/server.d.ts"
    }
  }
}
